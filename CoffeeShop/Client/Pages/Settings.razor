@page "/settings"
@inject NavigationManager Navigation

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Настройки - ECHO COFFEE</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Helvetica Neue', Arial, sans-serif;
        }

        body {
            background-color: #f8f5f0;
            color: #3a3226;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .container {
            width: 100%;
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
            flex: 1;
        }

        /* Header */
        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 30px 0;
            border-bottom: 1px solid #d9d2c5;
            position: relative;
        }

        .logo-container {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .logo-img {
            height: 50px;
            width: auto;
        }

        .logo-text {
            font-size: 28px;
            font-weight: 300;
            letter-spacing: 2px;
            color: #3a3226;
        }

            .logo-text span {
                font-weight: 700;
            }

        /* Навигация */
        nav {
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
            display: flex;
            align-items: center;
        }

        .nav-menu {
            display: flex;
            list-style: none;
            gap: 40px;
            margin: 0;
            padding: 0;
        }

            .nav-menu li a {
                text-decoration: none;
                color: #3a3226;
                font-size: 16px;
                font-weight: 400;
                letter-spacing: 1px;
                transition: color 0.3s;
                cursor: pointer;
            }

                .nav-menu li a:hover {
                    color: #a38b6d;
                }

        /* Кнопка бургер-меню */
        .burger-btn {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            width: 30px;
            height: 21px;
            background: transparent;
            border: none;
            cursor: pointer;
            padding: 0;
            position: relative;
            z-index: 100;
        }

        .burger-line {
            display: block;
            width: 100%;
            height: 3px;
            background: #3a3226;
            transition: all 0.3s;
        }

        /* Бургер-меню */
        .burger-menu {
            position: fixed;
            top: 0;
            right: -300px;
            width: 300px;
            height: 100vh;
            background: #fff;
            box-shadow: -5px 0 15px rgba(0,0,0,0.1);
            padding: 80px 30px 30px;
            transition: right 0.3s ease;
            z-index: 90;
        }

            .burger-menu.show {
                right: 0;
            }

        .burger-menu-item {
            padding: 15px 0;
            border-bottom: 1px solid #f0f0f0;
        }

            .burger-menu-item a {
                color: #3a3226;
                text-decoration: none;
                font-size: 16px;
                display: block;
                cursor: pointer;
            }

        .auth-btn {
            display: block;
            width: 100%;
            padding: 12px;
            margin-top: 20px;
            background: #3a3226;
            color: white;
            border: none;
            text-align: center;
            cursor: pointer;
            transition: background 0.3s;
        }

            .auth-btn:hover {
                background: #a38b6d;
            }

        /* Затемнение фона */
        .overlay {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0,0,0,0.5);
            z-index: 80;
            opacity: 0;
            visibility: hidden;
            transition: all 0.3s;
        }

            .overlay.show {
                opacity: 1;
                visibility: visible;
            }

        /* Основное содержимое страницы настроек */
        .settings-container {
            max-width: 800px;
            margin: 50px auto;
            padding: 30px;
            background: white;
            box-shadow: 0 3px 15px rgba(0,0,0,0.05);
        }

        .settings-title {
            font-size: 28px;
            font-weight: 300;
            letter-spacing: 2px;
            margin-bottom: 30px;
            color: #3a3226;
            text-align: center;
        }

        .settings-section {
            margin-bottom: 40px;
            padding-bottom: 30px;
            border-bottom: 1px solid #f0f0f0;
        }

            .settings-section:last-child {
                border-bottom: none;
                margin-bottom: 0;
                padding-bottom: 0;
            }

        .section-title {
            font-size: 18px;
            font-weight: 400;
            color: #a38b6d;
            margin-bottom: 20px;
            letter-spacing: 1px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-label {
            display: block;
            margin-bottom: 8px;
            font-size: 14px;
            color: #3a3226;
        }

        .form-input {
            width: 100%;
            padding: 12px 15px;
            border: 1px solid #d9d2c5;
            background: #f8f5f0;
            font-size: 16px;
            transition: border 0.3s;
        }

            .form-input:focus {
                outline: none;
                border-color: #a38b6d;
            }

        .checkbox-group {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
        }

        .checkbox-input {
            margin-right: 10px;
        }

        .checkbox-label {
            font-size: 14px;
            color: #3a3226;
        }

        .radio-group {
            margin-bottom: 15px;
        }

        .radio-option {
            display: flex;
            align-items: center;
            margin-bottom: 10px;
        }

        .radio-input {
            margin-right: 10px;
        }

        .radio-label {
            font-size: 14px;
            color: #3a3226;
        }

        .select-wrapper {
            position: relative;
        }

        .form-select {
            width: 100%;
            padding: 12px 15px;
            border: 1px solid #d9d2c5;
            background: #f8f5f0;
            font-size: 16px;
            appearance: none;
            -webkit-appearance: none;
            -moz-appearance: none;
            background-image: url("data:image/svg+xml;charset=UTF-8,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'%3e%3cpolyline points='6 9 12 15 18 9'%3e%3c/polyline%3e%3c/svg%3e");
            background-repeat: no-repeat;
            background-position: right 10px center;
            background-size: 1em;
        }

            .form-select:focus {
                outline: none;
                border-color: #a38b6d;
            }

        .settings-buttons {
            display: flex;
            justify-content: flex-end;
            gap: 15px;
            margin-top: 30px;
        }

        .btn {
            padding: 12px 25px;
            font-size: 14px;
            letter-spacing: 1px;
            border: none;
            cursor: pointer;
            transition: all 0.3s;
        }

        .btn-primary {
            background: #3a3226;
            color: white;
        }

            .btn-primary:hover {
                background: #a38b6d;
            }

        .btn-secondary {
            background: #d9d2c5;
            color: #3a3226;
        }

            .btn-secondary:hover {
                background: #c0b7a7;
            }

        /* Footer */
        .site-footer {
            background-color: #3a3226;
            color: white;
            padding: 50px 0 20px;
            border-top: 1px solid #d9d2c5;
            font-size: 14px;
        }

        .footer-content {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .footer-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 40px;
            margin-bottom: 30px;
        }

        .footer-about,
        .footer-contacts,
        .footer-legal {
            padding: 0 15px;
        }

        .site-footer h4 {
            color: #a38b6d;
            margin-bottom: 20px;
            font-size: 18px;
            letter-spacing: 1px;
        }

        .site-footer p {
            line-height: 1.6;
            margin-bottom: 15px;
        }

        .contact-item {
            margin-bottom: 12px;
        }

        .footer-bottom {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 40px;
            padding-top: 20px;
            border-top: 1px solid #d9d2c5;
        }

        .footer-copyright {
            color: #666;
            font-size: 13px;
        }

        .footer-links {
            display: flex;
            gap: 20px;
        }

            .footer-links a {
                color: #666;
                text-decoration: none;
                font-size: 13px;
                transition: color 0.3s;
            }

                .footer-links a:hover {
                    color: #a38b6d;
                }

        /* Responsive */
        @@media (max-width: 768px) {
            header {
                flex-direction: column;
                gap: 20px;
            }

            nav {
                position: static;
                transform: none;
                margin: 20px 0;
            }

            .nav-menu {
                flex-direction: column;
                gap: 15px;
            }

            .settings-container {
                padding: 20px;
                margin: 30px auto;
            }

            .settings-buttons {
                flex-direction: column;
            }

            .btn {
                width: 100%;
            }

            .footer-grid {
                grid-template-columns: 1fr;
                gap: 30px;
            }

            .footer-bottom {
                flex-direction: column;
                gap: 15px;
                text-align: center;
            }

            .footer-links {
                flex-direction: column;
                gap: 10px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Header -->
        <header>
            <div class="logo-container">
                <img src="logotip.png" alt="Логотип ECHO COFFEE" class="logo-img">
                <div class="logo-text">ECHO <span>COFFEE</span></div>
            </div>

            <!-- Центральное меню -->
            <nav>
                <ul class="nav-menu">
                    <li><a @onclick='() => NavigateTo("company")' @onclick:preventDefault>КОМПАНИЯ</a></li>
                    <li><a @onclick='() => NavigateTo("menu")' @onclick:preventDefault>МЕНЮ</a></li>
                    <li><a @onclick='() => NavigateTo("contacts")' @onclick:preventDefault>КОНТАКТЫ</a></li>
                </ul>
            </nav>

            <!-- Кнопка бургер-меню -->
            <button class="burger-btn" @onclick="ToggleBurgerMenu">
                <span class="burger-line"></span>
                <span class="burger-line"></span>
                <span class="burger-line"></span>
            </button>
        </header>

        <!-- Бургер-меню -->
        <div class="burger-menu @(isBurgerMenuOpen ? "show" : "")">
            <div class="burger-menu-item">
                <a @onclick='() => { ToggleBurgerMenu(); NavigateTo("profile"); }' @onclick:preventDefault>Профиль</a>
            </div>
            <div class="burger-menu-item">
                <a @onclick='() => { ToggleBurgerMenu(); NavigateTo("settings"); }' @onclick:preventDefault>Настройки</a>
            </div>
            <button class="auth-btn" @onclick='() => { ToggleBurgerMenu(); NavigateTo("login"); }'>АВТОРИЗАЦИЯ</button>
        </div>

        <!-- Затемнение фона -->
        <div class="overlay @(isBurgerMenuOpen ? "show" : "")" @onclick="ToggleBurgerMenu"></div>
    </div>

    <!-- Основное содержимое страницы настроек -->
    <main>
        <div class="container">
            <div class="settings-container">
                <h1 class="settings-title">НАСТРОЙКИ ПРОФИЛЯ</h1>

                <!-- Личная информация -->
                <div class="settings-section">
                    <h2 class="section-title">ЛИЧНАЯ ИНФОРМАЦИЯ</h2>

                    <div class="form-group">
                        <label class="form-label">Имя</label>
                        <input type="text" class="form-input" value="Алексей">
                    </div>

                    <div class="form-group">
                        <label class="form-label">Фамилия</label>
                        <input type="text" class="form-input" value="Иванов">
                    </div>

                    <div class="form-group">
                        <label class="form-label">Email</label>
                        <input type="email" class="form-input" value="alexey@example.com">
                    </div>

                    <div class="form-group">
                        <label class="form-label">Телефон</label>
                        <input type="tel" class="form-input" value="+7 (900) 123-45-67">
                    </div>
                </div>

                <!-- Настройки уведомлений -->
                <div class="settings-section">
                    <h2 class="section-title">УВЕДОМЛЕНИЯ</h2>

                    <div class="checkbox-group">
                        <input type="checkbox" id="email-notifications" class="checkbox-input" checked>
                        <label for="email-notifications" class="checkbox-label">Email-уведомления</label>
                    </div>

                    <div class="checkbox-group">
                        <input type="checkbox" id="sms-notifications" class="checkbox-input">
                        <label for="sms-notifications" class="checkbox-label">SMS-уведомления</label>
                    </div>

                    <div class="checkbox-group">
                        <input type="checkbox" id="promo-offers" class="checkbox-input" checked>
                        <label for="promo-offers" class="checkbox-label">Специальные предложения</label>
                    </div>
                </div>

                <!-- Настройки приложения -->
                <div class="settings-section">
                    <h2 class="section-title">НАСТРОЙКИ ПРИЛОЖЕНИЯ</h2>

                    <div class="form-group">
                        <label class="form-label">Язык</label>
                        <div class="select-wrapper">
                            <select class="form-select">
                                <option selected>Русский</option>
                                <option>English</option>
                                <option>Español</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Тема</label>
                        <div class="radio-group">
                            <div class="radio-option">
                                <input type="radio" id="light-theme" name="theme" class="radio-input" checked>
                                <label for="light-theme" class="radio-label">Светлая</label>
                            </div>
                            <div class="radio-option">
                                <input type="radio" id="dark-theme" name="theme" class="radio-input">
                                <label for="dark-theme" class="radio-label">Темная</label>
                            </div>
                            <div class="radio-option">
                                <input type="radio" id="system-theme" name="theme" class="radio-input">
                                <label for="system-theme" class="radio-label">Как в системе</label>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Безопасность -->
                <div class="settings-section">
                    <h2 class="section-title">БЕЗОПАСНОСТЬ</h2>

                    <div class="form-group">
                        <label class="form-label">Текущий пароль</label>
                        <input type="password" class="form-input">
                    </div>

                    <div class="form-group">
                        <label class="form-label">Новый пароль</label>
                        <input type="password" class="form-input">
                    </div>

                    <div class="form-group">
                        <label class="form-label">Подтвердите новый пароль</label>
                        <input type="password" class="form-input">
                    </div>
                </div>

                <!-- Кнопки действий -->
                <div class="settings-buttons">
                    <button class="btn btn-secondary" @onclick='() => NavigateTo("profile")'>ОТМЕНА</button>
                    <button class="btn btn-primary" @onclick="SaveSettings">СОХРАНИТЬ</button>
                </div>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="site-footer">
        <div class="footer-content">
            <div class="footer-grid">
                <div class="footer-about">
                    <h4>О НАС</h4>
                    <p>
                        ECHO COFFEE — сеть кофеен премиум-класса, основанная в 2015 году.
                        Мы тщательно отбираем зерна с лучших плантаций мира и обжариваем их
                        по уникальной технологии. Наши бариста — настоящие профессионалы,
                        прошедшие обучение у чемпионов мировых чемпионатов бариста.
                    </p>
                </div>

                <div class="footer-contacts">
                    <h4>КОНТАКТЫ</h4>
                    <div class="contact-item">
                        <strong>Телефон:</strong> +7 (800) 555-12-34
                    </div>
                    <div class="contact-item">
                        <strong>Email:</strong> info@echo-coffee.com
                    </div>
                    <div class="contact-item">
                        <strong>Адрес:</strong> г. Череповец, Советский пр. 8
                    </div>
                    <div class="contact-item">
                        <strong>Часы работы:</strong> Ежедневно 8:00–22:00
                    </div>
                </div>

                <div class="footer-legal">
                    <h4>ЮРИДИЧЕСКАЯ ИНФОРМАЦИЯ</h4>
                    <p>
                        ООО "ЭХО КОФЕ"<br>
                        ИНН 1234567890<br>
                        ОГРН 1234567890123<br>
                        Юр. адрес: 162600, Россия, Вологодская обл.,<br>
                        г. Череповец, Советский пр. 8
                    </p>
                </div>
            </div>
        </div>

        <div class="footer-bottom">
            <div class="footer-copyright">
                © @DateTime.Now.Year ECHO COFFEE. Все права защищены.
            </div>
            <div class="footer-links">
                <a href="/privacy">Политика конфиденциальности</a>
                <a href="/terms">Условия использования</a>
            </div>
        </div>
    </footer>

    @code {
        private bool isBurgerMenuOpen = false;

        private void ToggleBurgerMenu()
        {
            isBurgerMenuOpen = !isBurgerMenuOpen;
        }

        private void NavigateTo(string page)
        {
            if (isBurgerMenuOpen)
            {
                ToggleBurgerMenu();
            }
            Navigation.NavigateTo($"/{page.ToLower()}", forceLoad: true);
        }

        private void SaveSettings()
        {
            // Здесь будет логика сохранения настроек
            // Можно добавить вызов API или сохранение в локальное хранилище

            // После сохранения можно перенаправить пользователя
            Navigation.NavigateTo("/profile");
        }
    }
</body>
</html>