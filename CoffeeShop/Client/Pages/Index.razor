@page "/"

<div class="container">
    <div class="main-title">
        <h1>ECHO COFFEE</h1>
        <p>INFO</p>
    </div>

    <div class="season"></div>

    <div class="menu-grid center-last">
        <div class="menu-item" @onclick="() => NavigateToMenu('season')">
            <h3>ВЕСНА-ЛЕТО</h3>
        </div>
        <div class="menu-item" @onclick="() => NavigateToMenu('signature')">
            <h3>ФИРМЕННОЕ МЕНЮ</h3>
        </div>
        <div class="menu-item" @onclick="() => NavigateToMenu('tea')">
            <h3>АВТОРСКИЕ ЧАИ</h3>
        </div>
        <div class="menu-item" @onclick="() => NavigateToMenu('classic')">
            <h3>КЛАССИЧЕСКОЕ МЕНЮ</h3>
        </div>

        <div class="full-row">
            <div class="menu-item" @onclick="() => NavigateToMenu('cold')">
                <h3>ХОЛОДНЫЕ НАПИТКИ</h3>
            </div>
        </div>
    </div>

    <div class="contacts">
        <h2>КОНТАКТЫ</h2>
        <div class="map-container">
            <iframe src="https://www.google.com/maps/embed?..." 
                    width="100%" 
                    height="400" 
                    style="border:0;" 
                    allowfullscreen="" 
                    loading="lazy"></iframe>
        </div>
    </div>
</div>

@code {
    [Inject] NavigationManager Navigation { get; set; }

    private void NavigateToMenu(string menuType)
    {
        // Логика навигации по меню
        Navigation.NavigateTo($"/menu/{menuType}");
    }
}
