@page "/forgot-password"
@inject NavigationManager Navigation

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="logotip.png" type="image/png">
    <title>ECHO COFFEE - Восстановление пароля</title>
    <style>
        /* Стили такие же, как на странице авторизации */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Helvetica Neue', Arial, sans-serif;
        }

        body {
            background-color: #f8f5f0;
            color: #3a3226;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .container {
            width: 100%;
            max-width: 500px;
            margin: 80px auto;
            padding: 40px;
            flex: 1;
        }

        /* Auth Header */
        .auth-header {
            text-align: center;
            margin-bottom: 50px;
        }

        .auth-logo {
            height: 80px;
            margin-bottom: 20px;
        }

        .auth-title {
            font-size: 36px;
            font-weight: 300;
            letter-spacing: 2px;
            color: #3a3226;
        }

            .auth-title span {
                font-weight: 700;
            }

        /* Auth Form */
        .auth-form {
            background: #fff;
            padding: 40px;
            box-shadow: 0 3px 10px rgba(0,0,0,0.05);
        }

        .form-group {
            margin-bottom: 25px;
            position: relative;
        }

            .form-group label {
                display: block;
                margin-bottom: 8px;
                font-size: 16px;
                color: #3a3226;
            }

        .form-input {
            width: 100%;
            padding: 12px 15px;
            border: 1px solid #d9d2c5;
            background: #f8f5f0;
            font-size: 16px;
            transition: all 0.3s;
        }

            .form-input:focus {
                outline: none;
                border-color: #a38b6d;
            }

        .auth-button {
            width: 100%;
            padding: 15px;
            background: #3a3226;
            color: white;
            border: none;
            font-size: 16px;
            letter-spacing: 1px;
            cursor: pointer;
            transition: background 0.3s;
            margin-top: 10px;
        }

            .auth-button:hover {
                background: #a38b6d;
            }

        .auth-links {
            text-align: center;
            margin-top: 25px;
        }

        .auth-link {
            color: #a38b6d;
            text-decoration: none;
            font-size: 14px;
            transition: color 0.3s;
        }

            .auth-link:hover {
                color: #3a3226;
            }

        .auth-message {
            text-align: center;
            margin-top: 20px;
            color: #a38b6d;
            font-size: 14px;
        }

        /* Header */
        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 30px 40px;
            border-bottom: 1px solid #d9d2c5;
        }

        .logo {
            font-size: 28px;
            font-weight: 300;
            letter-spacing: 2px;
            color: #3a3226;
        }

            .logo span {
                font-weight: 700;
            }

        /* Footer */
        .site-footer {
            background-color: #3a3226;
            color: white;
            padding: 50px 0 20px;
            border-top: 1px solid #d9d2c5;
            font-size: 14px;
        }

        .footer-content {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .footer-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 40px;
            margin-bottom: 30px;
        }

        .footer-about,
        .footer-contacts,
        .footer-legal {
            padding: 0 15px;
        }

        .site-footer h4 {
            color: #a38b6d;
            margin-bottom: 20px;
            font-size: 18px;
            letter-spacing: 1px;
        }

        .site-footer p {
            line-height: 1.6;
            margin-bottom: 15px;
        }

        .contact-item {
            margin-bottom: 12px;
        }

        .footer-bottom {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 40px;
            padding-top: 20px;
            border-top: 1px solid #d9d2c5;
        }

        .footer-copyright {
            color: #666;
            font-size: 13px;
        }

        .footer-links {
            display: flex;
            gap: 20px;
        }

            .footer-links a {
                color: #666;
                text-decoration: none;
                font-size: 13px;
                transition: color 0.3s;
            }

                .footer-links a:hover {
                    color: #a38b6d;
                }

        /* Responsive */
        @@media (max-width: 768px) {
            .container {
                margin: 40px auto;
                padding: 20px;
            }

            .footer-grid {
                grid-template-columns: 1fr;
                gap: 30px;
            }

            .footer-bottom {
                flex-direction: column;
                gap: 15px;
                text-align: center;
            }

            .footer-links {
                flex-direction: column;
                gap: 10px;
            }
        }
    </style>
</head>
<body>
    <header>
        <div class="logo">ECHO <span>COFFEE</span></div>
    </header>

    <div class="container">
        <div class="auth-header">
            <img src="logotip.png" alt="Логотип ECHO COFFEE" class="auth-logo">
            <h1 class="auth-title">ВОССТАНОВЛЕНИЕ <span>ПАРОЛЯ</span></h1>
        </div>

        @if (!isEmailSent)
        {
            <div class="auth-form">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" class="form-input" placeholder="Введите ваш email" @bind="email">
                </div>

                <button class="auth-button" @onclick="HandlePasswordReset">ОТПРАВИТЬ ИНСТРУКЦИИ</button>

                <div class="auth-links">
                    <a href="/login" class="auth-link">Вернуться к авторизации</a>
                </div>
            </div>
        }
        else
        {
            <div class="auth-form">
                <div class="auth-message">
                    Инструкции по восстановлению пароля были отправлены на указанный email.
                    Пожалуйста, проверьте вашу почту.
                </div>

                <div class="auth-links">
                    <a href="/login" class="auth-link">Вернуться к авторизации</a>
                </div>
            </div>
        }
    </div>

    <!-- Footer -->
    <footer class="site-footer">
        <div class="footer-content">
            <div class="footer-grid">
                <div class="footer-about">
                    <h4>О НАС</h4>
                    <p>
                        ECHO COFFEE — сеть кофеен премиум-класса, основанная в 2015 году.
                        Мы тщательно отбираем зерна с лучших плантаций мира и обжариваем их
                        по уникальной технологии. Наши бариста — настоящие профессионалы,
                        прошедшие обучение у чемпионов мировых чемпионатов бариста.
                    </p>
                </div>

                <div class="footer-contacts">
                    <h4>КОНТАКТЫ</h4>
                    <div class="contact-item">
                        <strong>Телефон:</strong> +7 (800) 555-12-34
                    </div>
                    <div class="contact-item">
                        <strong>Email:</strong> info@echo-coffee.com
                    </div>
                    <div class="contact-item">
                        <strong>Адрес:</strong> г. Череповец, Советский пр. 8
                    </div>
                    <div class="contact-item">
                        <strong>Часы работы:</strong> Ежедневно 8:00–22:00
                    </div>
                </div>

                <div class="footer-legal">
                    <h4>ЮРИДИЧЕСКАЯ ИНФОРМАЦИЯ</h4>
                    <p>
                        ООО "ЭХО КОФЕ"<br>
                        ИНН 1234567890<br>
                        ОГРН 1234567890123<br>
                        Юр. адрес: 162600, Россия, Вологодская обл.,<br>
                        г. Череповец, Советский пр. 8
                    </p>
                </div>
            </div>
        </div>

        <div class="footer-bottom">
            <div class="footer-copyright">
                © @DateTime.Now.Year ECHO COFFEE. Все права защищены.
            </div>
            <div class="footer-links">
                <a href="/privacy">Политика конфиденциальности</a>
                <a href="/terms">Условия использования</a>
            </div>
        </div>
    </footer>
</body>
</html>

@code {
    private string email = "";
    private bool isEmailSent = false;

    private async Task HandlePasswordReset()
    {
        if (string.IsNullOrWhiteSpace(email))
        {
            // Здесь можно добавить отображение ошибки
            Console.WriteLine("Email обязателен");
            return;
        }

        try
        {
            // Здесь будет логика отправки инструкций по восстановлению пароля
            Console.WriteLine($"Запрос на восстановление пароля для: {email}");

            // Имитация отправки письма
            await Task.Delay(1000);
            isEmailSent = true;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Ошибка: {ex.Message}");
            // Здесь можно добавить отображение ошибки пользователю
        }
    }
}