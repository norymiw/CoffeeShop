@page "/cart"
@inject NavigationManager Navigation

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Корзина - ECHO COFFEE</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Helvetica Neue', Arial, sans-serif;
        }

        body {
            background-color: #f8f5f0;
            color: #3a3226;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .container {
            width: 100%;
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
            flex: 1;
        }

        /* Header */
        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 30px 0;
            border-bottom: 1px solid #d9d2c5;
            position: relative;
        }

        .logo-container {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .logo-img {
            height: 50px;
            width: auto;
        }

        .logo-text {
            font-size: 28px;
            font-weight: 300;
            letter-spacing: 2px;
            color: #3a3226;
        }

            .logo-text span {
                font-weight: 700;
            }

        /* Навигация */
        nav {
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
            display: flex;
            align-items: center;
        }

        .nav-menu {
            display: flex;
            list-style: none;
            gap: 40px;
            margin: 0;
            padding: 0;
        }

            .nav-menu li a {
                text-decoration: none;
                color: #3a3226;
                font-size: 16px;
                font-weight: 400;
                letter-spacing: 1px;
                transition: color 0.3s;
                cursor: pointer;
            }

                .nav-menu li a:hover {
                    color: #a38b6d;
                }

        /* Кнопка бургер-меню */
        .burger-btn {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            width: 30px;
            height: 21px;
            background: transparent;
            border: none;
            cursor: pointer;
            padding: 0;
            position: relative;
            z-index: 100;
        }

        .burger-line {
            display: block;
            width: 100%;
            height: 3px;
            background: #3a3226;
            transition: all 0.3s;
        }

        /* Бургер-меню */
        .burger-menu {
            position: fixed;
            top: 0;
            right: -300px;
            width: 300px;
            height: 100vh;
            background: #fff;
            box-shadow: -5px 0 15px rgba(0,0,0,0.1);
            padding: 80px 30px 30px;
            transition: right 0.3s ease;
            z-index: 90;
        }

            .burger-menu.show {
                right: 0;
            }

        .burger-menu-item {
            padding: 15px 0;
            border-bottom: 1px solid #f0f0f0;
        }

            .burger-menu-item a {
                color: #3a3226;
                text-decoration: none;
                font-size: 16px;
                display: block;
                cursor: pointer;
            }

        .auth-btn {
            display: block;
            width: 100%;
            padding: 12px;
            margin-top: 20px;
            background: #3a3226;
            color: white;
            border: none;
            text-align: center;
            cursor: pointer;
            transition: background 0.3s;
        }

            .auth-btn:hover {
                background: #a38b6d;
            }

        /* Затемнение фона */
        .overlay {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0,0,0,0.5);
            z-index: 80;
            opacity: 0;
            visibility: hidden;
            transition: all 0.3s;
        }

            .overlay.show {
                opacity: 1;
                visibility: visible;
            }

        /* Основное содержимое страницы корзины */
        .cart-container {
            max-width: 1000px;
            margin: 50px auto;
            padding: 0 20px;
        }

        .cart-title {
            font-size: 32px;
            font-weight: 300;
            letter-spacing: 2px;
            margin-bottom: 40px;
            color: #3a3226;
            text-align: center;
        }

        .cart-items {
            margin-bottom: 40px;
        }

        .cart-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 25px;
            background: white;
            margin-bottom: 20px;
            box-shadow: 0 3px 10px rgba(0,0,0,0.05);
        }

        .item-info {
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .item-image {
            width: 80px;
            height: 80px;
            object-fit: cover;
            border-radius: 4px;
        }

        .item-details {
            display: flex;
            flex-direction: column;
        }

        .item-name {
            font-size: 18px;
            font-weight: 400;
            margin-bottom: 5px;
        }

        .item-description {
            font-size: 14px;
            color: #666;
            margin-bottom: 5px;
        }

        .item-price {
            font-size: 16px;
            font-weight: 500;
            color: #3a3226;
        }

        .item-controls {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .quantity-control {
            display: flex;
            align-items: center;
            border: 1px solid #d9d2c5;
            border-radius: 4px;
        }

        .quantity-btn {
            width: 30px;
            height: 30px;
            background: #f8f5f0;
            border: none;
            font-size: 16px;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .quantity-input {
            width: 40px;
            height: 30px;
            text-align: center;
            border: none;
            border-left: 1px solid #d9d2c5;
            border-right: 1px solid #d9d2c5;
        }

        .remove-btn {
            background: none;
            border: none;
            color: #a38b6d;
            cursor: pointer;
            font-size: 14px;
            transition: color 0.3s;
        }

            .remove-btn:hover {
                color: #8a6d3b;
            }

        .cart-summary {
            background: white;
            padding: 30px;
            box-shadow: 0 3px 10px rgba(0,0,0,0.05);
        }

        .summary-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 15px;
            padding-bottom: 15px;
            border-bottom: 1px solid #f0f0f0;
        }

            .summary-row:last-child {
                border-bottom: none;
                margin-bottom: 0;
                padding-bottom: 0;
            }

        .summary-label {
            font-size: 16px;
            color: #666;
        }

        .summary-value {
            font-size: 16px;
            font-weight: 500;
            color: #3a3226;
        }

        .total-row {
            font-size: 18px;
            font-weight: 500;
        }

        .checkout-btn {
            width: 100%;
            padding: 15px;
            margin-top: 30px;
            background: #3a3226;
            color: white;
            border: none;
            font-size: 16px;
            letter-spacing: 1px;
            cursor: pointer;
            transition: background 0.3s;
        }

            .checkout-btn:hover {
                background: #a38b6d;
            }

        .empty-cart {
            text-align: center;
            padding: 50px 0;
        }

            .empty-cart p {
                font-size: 18px;
                margin-bottom: 30px;
            }

        .continue-btn {
            padding: 12px 25px;
            background: #3a3226;
            color: white;
            border: none;
            font-size: 14px;
            letter-spacing: 1px;
            cursor: pointer;
            transition: background 0.3s;
        }

            .continue-btn:hover {
                background: #a38b6d;
            }

        /* Footer */
        .site-footer {
            background-color: #3a3226;
            color: white;
            padding: 50px 0 20px;
            border-top: 1px solid #d9d2c5;
            font-size: 14px;
        }

        .footer-content {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .footer-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 40px;
            margin-bottom: 30px;
        }

        .footer-about,
        .footer-contacts,
        .footer-legal {
            padding: 0 15px;
        }

        .site-footer h4 {
            color: #a38b6d;
            margin-bottom: 20px;
            font-size: 18px;
            letter-spacing: 1px;
        }

        .site-footer p {
            line-height: 1.6;
            margin-bottom: 15px;
        }

        .contact-item {
            margin-bottom: 12px;
        }

        .footer-bottom {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 40px;
            padding-top: 20px;
            border-top: 1px solid #d9d2c5;
        }

        .footer-copyright {
            color: #666;
            font-size: 13px;
        }

        .footer-links {
            display: flex;
            gap: 20px;
        }

            .footer-links a {
                color: #666;
                text-decoration: none;
                font-size: 13px;
                transition: color 0.3s;
            }

                .footer-links a:hover {
                    color: #a38b6d;
                }

        /* Responsive */
        @@media (max-width: 768px) {
            header {
                flex-direction: column;
                gap: 20px;
            }

            nav {
                position: static;
                transform: none;
                margin: 20px 0;
            }

            .nav-menu {
                flex-direction: column;
                gap: 15px;
            }

            .cart-item {
                flex-direction: column;
                align-items: flex-start;
                gap: 15px;
            }

            .item-controls {
                width: 100%;
                justify-content: space-between;
            }

            .footer-grid {
                grid-template-columns: 1fr;
                gap: 30px;
            }

            .footer-bottom {
                flex-direction: column;
                gap: 15px;
                text-align: center;
            }

            .footer-links {
                flex-direction: column;
                gap: 10px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Header -->
        <header>
            <div class="logo-container">
                <img src="logotip.png" alt="Логотип ECHO COFFEE" class="logo-img">
                <div class="logo-text">ECHO <span>COFFEE</span></div>
            </div>

            <!-- Центральное меню -->
            <nav>
                <ul class="nav-menu">
                    <li><a @onclick='() => NavigateTo("company")' @onclick:preventDefault>КОМПАНИЯ</a></li>
                    <li><a @onclick='() => NavigateTo("menu")' @onclick:preventDefault>МЕНЮ</a></li>
                    <li><a @onclick='() => NavigateTo("contacts")' @onclick:preventDefault>КОНТАКТЫ</a></li>
                </ul>
            </nav>

            <!-- Кнопка бургер-меню -->
            <button class="burger-btn" @onclick="ToggleBurgerMenu">
                <span class="burger-line"></span>
                <span class="burger-line"></span>
                <span class="burger-line"></span>
            </button>
        </header>

        <!-- Бургер-меню -->
        <div class="burger-menu @(isBurgerMenuOpen ? "show" : "")">
            <div class="burger-menu-item">
                <a @onclick='() => { ToggleBurgerMenu(); NavigateTo("profile"); }' @onclick:preventDefault>Профиль</a>
            </div>
            <div class="burger-menu-item">
                <a @onclick='() => { ToggleBurgerMenu(); NavigateTo("settings"); }' @onclick:preventDefault>Настройки</a>
            </div>
            <button class="auth-btn" @onclick='() => { ToggleBurgerMenu(); NavigateTo("login"); }'>АВТОРИЗАЦИЯ</button>
        </div>

        <!-- Затемнение фона -->
        <div class="overlay @(isBurgerMenuOpen ? "show" : "")" @onclick="ToggleBurgerMenu"></div>
    </div>

    <!-- Основное содержимое страницы корзины -->
    <main>
        <div class="cart-container">
            <h1 class="cart-title">ВАША КОРЗИНА</h1>

            @if (cartItems.Count == 0)
            {
                <div class="empty-cart">
                    <p>Ваша корзина пуста</p>
                    <button class="continue-btn" @onclick='() => NavigateTo("menu")'>ПЕРЕЙТИ В МЕНЮ</button>
                </div>
            }
            else
            {
                <div class="cart-items">
                    @foreach (var item in cartItems)
                    {
                        <div class="cart-item">
                            <div class="item-info">
                                <img src="@item.ImageUrl" alt="@item.Name" class="item-image">
                                <div class="item-details">
                                    <h3 class="item-name">@item.Name</h3>
                                    <p class="item-description">@item.Description</p>
                                    <span class="item-price">@item.Price.ToString("C")</span>
                                </div>
                            </div>
                            <div class="item-controls">
                                <div class="quantity-control">
                                    <button class="quantity-btn" @onclick='() => DecreaseQuantity(item)'>-</button>
                                    <input type="text" class="quantity-input" value="@item.Quantity" readonly>
                                    <button class="quantity-btn" @onclick='() => IncreaseQuantity(item)'>+</button>
                                </div>
                                <button class="remove-btn" @onclick='() => RemoveItem(item)'>Удалить</button>
                            </div>
                        </div>
                    }
                </div>

                <div class="cart-summary">
                    <div class="summary-row">
                        <span class="summary-label">Товары (@cartItems.Sum(i => i.Quantity))</span>
                        <span class="summary-value">@cartItems.Sum(i => i.Price * i.Quantity).ToString("C")</span>
                    </div>
                    <div class="summary-row">
                        <span class="summary-label">Доставка</span>
                        <span class="summary-value">@(deliveryCost == 0 ? "Бесплатно" : deliveryCost.ToString("C"))</span>
                    </div>
                    <div class="summary-row total-row">
                        <span class="summary-label">Итого</span>
                        <span class="summary-value">@((cartItems.Sum(i => i.Price * i.Quantity) + deliveryCost).ToString("C"))</span>
                    </div>
                    <button class="checkout-btn" @onclick="ProceedToCheckout">ОФОРМИТЬ ЗАКАЗ</button>
                </div>
            }
        </div>
    </main>

    <!-- Footer -->
    <footer class="site-footer">
        <div class="footer-content">
            <div class="footer-grid">
                <div class="footer-about">
                    <h4>О НАС</h4>
                    <p>
                        ECHO COFFEE — сеть кофеен премиум-класса, основанная в 2015 году.
                        Мы тщательно отбираем зерна с лучших плантаций мира и обжариваем их
                        по уникальной технологии. Наши бариста — настоящие профессионалы,
                        прошедшие обучение у чемпионов мировых чемпионатов бариста.
                    </p>
                </div>

                <div class="footer-contacts">
                    <h4>КОНТАКТЫ</h4>
                    <div class="contact-item">
                        <strong>Телефон:</strong> +7 (800) 555-12-34
                    </div>
                    <div class="contact-item">
                        <strong>Email:</strong> info@echo-coffee.com
                    </div>
                    <div class="contact-item">
                        <strong>Адрес:</strong> г. Череповец, Советский пр. 8
                    </div>
                    <div class="contact-item">
                        <strong>Часы работы:</strong> Ежедневно 8:00–22:00
                    </div>
                </div>

                <div class="footer-legal">
                    <h4>ЮРИДИЧЕСКАЯ ИНФОРМАЦИЯ</h4>
                    <p>
                        ООО "ЭХО КОФЕ"<br>
                        ИНН 1234567890<br>
                        ОГРН 1234567890123<br>
                        Юр. адрес: 162600, Россия, Вологодская обл.,<br>
                        г. Череповец, Советский пр. 8
                    </p>
                </div>
            </div>
        </div>

        <div class="footer-bottom">
            <div class="footer-copyright">
                © @DateTime.Now.Year ECHO COFFEE. Все права защищены.
            </div>
            <div class="footer-links">
                <a href="/privacy">Политика конфиденциальности</a>
                <a href="/terms">Условия использования</a>
            </div>
        </div>
    </footer>

    @code {
        private bool isBurgerMenuOpen = false;
        private List<CartItem> cartItems = new List<CartItem>();
        private decimal deliveryCost = 0; // Бесплатная доставка

        protected override void OnInitialized()
        {
            // Заглушка для тестирования - в реальном приложении данные будут браться из состояния
            cartItems.Add(new CartItem
            {
                Id = 1,
                Name = "Капучино классический",
                Description = "Двойная порция эспрессо, молоко с нежной пенкой",
                Price = 250,
                Quantity = 1,
                ImageUrl = "capuchino.png"
            });

            cartItems.Add(new CartItem
            {
                Id = 2,
                Name = "Латте с сиропом ванили",
                Description = "Нежный латте с натуральным ванильным сиропом",
                Price = 280,
                Quantity = 2,
                ImageUrl = "latte.png"
            });
        }

        private void ToggleBurgerMenu()
        {
            isBurgerMenuOpen = !isBurgerMenuOpen;
        }

        private void NavigateTo(string page)
        {
            if (isBurgerMenuOpen)
            {
                ToggleBurgerMenu();
            }
            Navigation.NavigateTo($"/{page.ToLower()}", forceLoad: true);
        }

        private void IncreaseQuantity(CartItem item)
        {
            item.Quantity++;
        }

        private void DecreaseQuantity(CartItem item)
        {
            if (item.Quantity > 1)
            {
                item.Quantity--;
            }
            else
            {
                RemoveItem(item);
            }
        }

        private void RemoveItem(CartItem item)
        {
            cartItems.Remove(item);
        }

        private void ProceedToCheckout()
        {
            Navigation.NavigateTo("/checkout");
        }

        private class CartItem
        {
            public int Id { get; set; }
            public string Name { get; set; }
            public string Description { get; set; }
            public decimal Price { get; set; }
            public int Quantity { get; set; }
            public string ImageUrl { get; set; }
        }
    }
</body>
</html>