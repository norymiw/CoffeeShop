@page "/contacts"
@inject NavigationManager Navigation

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ECHO COFFEE - Контакты</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Helvetica Neue', Arial, sans-serif;
        }

        body {
            background-color: #f8f5f0;
            color: #3a3226;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .container {
            width: 100%;
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
            flex: 1;
        }

        /* Header */
        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 30px 0;
            border-bottom: 1px solid #d9d2c5;
            position: relative;
        }

        .logo-container {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .logo-img {
            height: 50px;
            width: auto;
        }

        .logo-text {
            font-size: 28px;
            font-weight: 300;
            letter-spacing: 2px;
            color: #3a3226;
        }

            .logo-text span {
                font-weight: 700;
            }

        /* Навигация */
        nav {
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
            display: flex;
            align-items: center;
        }

        .nav-menu {
            display: flex;
            list-style: none;
            gap: 40px;
            margin: 0;
            padding: 0;
        }

            .nav-menu li a {
                text-decoration: none;
                color: #3a3226;
                font-size: 16px;
                font-weight: 400;
                letter-spacing: 1px;
                transition: color 0.3s;
                cursor: pointer;
            }

                .nav-menu li a:hover {
                    color: #a38b6d;
                }

        /* Кнопка бургер-меню */
        .burger-btn {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            width: 30px;
            height: 21px;
            background: transparent;
            border: none;
            cursor: pointer;
            padding: 0;
            position: relative;
            z-index: 100;
        }

        .burger-line {
            display: block;
            width: 100%;
            height: 3px;
            background: #3a3226;
            transition: all 0.3s;
        }

        /* Бургер-меню */
        .burger-menu {
            position: fixed;
            top: 0;
            right: -300px;
            width: 300px;
            height: 100vh;
            background: #fff;
            box-shadow: -5px 0 15px rgba(0,0,0,0.1);
            padding: 80px 30px 30px;
            transition: right 0.3s ease;
            z-index: 90;
        }

            .burger-menu.show {
                right: 0;
            }

        .burger-menu-item {
            padding: 15px 0;
            border-bottom: 1px solid #f0f0f0;
        }

            .burger-menu-item a {
                color: #3a3226;
                text-decoration: none;
                font-size: 16px;
                display: block;
                cursor: pointer;
            }

        .auth-btn {
            display: block;
            width: 100%;
            padding: 12px;
            margin-top: 20px;
            background: #3a3226;
            color: white;
            border: none;
            text-align: center;
            cursor: pointer;
            transition: background 0.3s;
        }

            .auth-btn:hover {
                background: #a38b6d;
            }

        /* Затемнение фона */
        .overlay {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0,0,0,0.5);
            z-index: 80;
            opacity: 0;
            visibility: hidden;
            transition: all 0.3s;
        }

            .overlay.show {
                opacity: 1;
                visibility: visible;
            }

        /* Контакты */
        .contacts-page {
            padding: 80px 0 100px;
        }

        .page-title {
            text-align: center;
            margin-bottom: 60px;
        }

            .page-title h1 {
                font-size: 36px;
                font-weight: 300;
                letter-spacing: 3px;
                margin-bottom: 15px;
            }

            .page-title p {
                font-size: 16px;
                color: #a38b6d;
                letter-spacing: 2px;
            }

        .contacts-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 40px;
            margin-bottom: 60px;
        }

        .contact-info {
            background: #fff;
            padding: 40px;
            box-shadow: 0 3px 15px rgba(0,0,0,0.05);
        }

            .contact-info h3 {
                font-size: 22px;
                font-weight: 400;
                letter-spacing: 1px;
                margin-bottom: 25px;
                color: #a38b6d;
            }

        .contact-item {
            margin-bottom: 20px;
        }

            .contact-item strong {
                display: block;
                font-weight: 500;
                margin-bottom: 5px;
            }

            .contact-item p {
                font-size: 16px;
                line-height: 1.6;
            }

        .social-links {
            display: flex;
            gap: 15px;
            margin-top: 30px;
        }

            .social-links a {
                display: inline-block;
                width: 40px;
                height: 40px;
                background: #3a3226;
                color: white;
                border-radius: 50%;
                display: flex;
                align-items: center;
                justify-content: center;
                transition: background 0.3s;
            }

                .social-links a:hover {
                    background: #a38b6d;
                }

        .map-container {
            height: 500px;
            margin-top: 40px;
            box-shadow: 0 3px 15px rgba(0,0,0,0.05);
        }

            .map-container iframe {
                width: 100%;
                height: 100%;
                border: none;
            }

        /* Форма обратной связи */
        .contact-form {
            background: #fff;
            padding: 40px;
            box-shadow: 0 3px 15px rgba(0,0,0,0.05);
            margin-top: 60px;
        }

            .contact-form h3 {
                font-size: 22px;
                font-weight: 400;
                letter-spacing: 1px;
                margin-bottom: 25px;
                color: #a38b6d;
                text-align: center;
            }

        .form-group {
            margin-bottom: 20px;
        }

            .form-group label {
                display: block;
                margin-bottom: 8px;
                font-size: 14px;
                color: #3a3226;
            }

            .form-group input,
            .form-group textarea {
                width: 100%;
                padding: 12px 15px;
                border: 1px solid #d9d2c5;
                background: #f8f5f0;
                font-size: 16px;
                transition: border 0.3s;
            }

                .form-group input:focus,
                .form-group textarea:focus {
                    border-color: #a38b6d;
                    outline: none;
                }

            .form-group textarea {
                height: 150px;
                resize: vertical;
            }

        .submit-btn {
            display: block;
            width: 100%;
            padding: 15px;
            background: #3a3226;
            color: white;
            border: none;
            font-size: 16px;
            letter-spacing: 1px;
            cursor: pointer;
            transition: background 0.3s;
        }

            .submit-btn:hover {
                background: #a38b6d;
            }

        /* Footer */
        .site-footer {
            background-color: #3a3226;
            color: white;
            padding: 50px 0 20px;
            border-top: 1px solid #d9d2c5;
            font-size: 14px;
        }

        .footer-content {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .footer-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 40px;
            margin-bottom: 30px;
        }

        .footer-about,
        .footer-contacts,
        .footer-legal {
            padding: 0 15px;
        }

        .site-footer h4 {
            color: #a38b6d;
            margin-bottom: 20px;
            font-size: 18px;
            letter-spacing: 1px;
        }

        .site-footer p {
            line-height: 1.6;
            margin-bottom: 15px;
        }

        .footer-bottom {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 40px;
            padding-top: 20px;
            border-top: 1px solid #d9d2c5;
        }

        .footer-copyright {
            color: #666;
            font-size: 13px;
        }

        .footer-links {
            display: flex;
            gap: 20px;
        }

            .footer-links a {
                color: #666;
                text-decoration: none;
                font-size: 13px;
                transition: color 0.3s;
            }

                .footer-links a:hover {
                    color: #a38b6d;
                }

        /* Responsive */
        @@media (max-width: 768px) {
            header {
                flex-direction: column;
                gap: 20px;
            }

            nav {
                position: static;
                transform: none;
                margin: 20px 0;
            }

            .nav-menu {
                flex-direction: column;
                gap: 15px;
            }

            .contacts-grid {
                grid-template-columns: 1fr;
            }

            .page-title h1 {
                font-size: 28px;
            }

            .footer-grid {
                grid-template-columns: 1fr;
                gap: 30px;
            }

            .footer-bottom {
                flex-direction: column;
                gap: 15px;
                text-align: center;
            }

            .footer-links {
                flex-direction: column;
                gap: 10px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Header -->
        <header>
            <div class="logo-container">
                <img src="logotip.png" alt="Логотип ECHO COFFEE" class="logo-img">
                <div class="logo-text">ECHO <span>COFFEE</span></div>
            </div>

            <!-- Центральное меню -->
            <nav>
                <ul class="nav-menu">
                    <li><a @onclick='() => NavigateTo("company")' @onclick:preventDefault>КОМПАНИЯ</a></li>
                    <li><a @onclick='() => NavigateTo("menu")' @onclick:preventDefault>МЕНЮ</a></li>
                    <li><a @onclick='() => NavigateTo("contacts")' @onclick:preventDefault>КОНТАКТЫ</a></li>
                </ul>
            </nav>

            <!-- Кнопка бургер-меню -->
            <button class="burger-btn" @onclick="ToggleBurgerMenu">
                <span class="burger-line"></span>
                <span class="burger-line"></span>
                <span class="burger-line"></span>
            </button>
        </header>

        <!-- Бургер-меню -->
        <div class="burger-menu @(isBurgerMenuOpen ? "show" : "")">
            <div class="burger-menu-item">
                <a @onclick='() => { ToggleBurgerMenu(); NavigateTo("profile"); }' @onclick:preventDefault>Профиль</a>
            </div>
            <div class="burger-menu-item">
                <a @onclick='() => { ToggleBurgerMenu(); NavigateTo("settings"); }' @onclick:preventDefault>Настройки</a>
            </div>
            <button class="auth-btn" @onclick='() => { ToggleBurgerMenu(); NavigateTo("login"); }'>АВТОРИЗАЦИЯ</button>
        </div>

        <!-- Затемнение фона -->
        <div class="overlay @(isBurgerMenuOpen ? "show" : "")" @onclick="ToggleBurgerMenu"></div>
    </div>

    <!-- Основное содержимое страницы контактов -->
    <main class="contacts-page">
        <div class="container">
            <div class="page-title">
                <h1>КОНТАКТЫ</h1>
                <p>СВЯЖИТЕСЬ С НАМИ</p>
            </div>

            <div class="contacts-grid">
                <div class="contact-info">
                    <h3>НАШИ КОНТАКТЫ</h3>
                    <div class="contact-item">
                        <strong>Адрес</strong>
                        <p>г. Череповец, Советский пр. 8</p>
                    </div>
                    <div class="contact-item">
                        <strong>Телефон</strong>
                        <p>+7 (800) 555-12-34</p>
                    </div>
                    <div class="contact-item">
                        <strong>Email</strong>
                        <p>info@echo-coffee.com</p>
                    </div>
                    <div class="contact-item">
                        <strong>Часы работы</strong>
                        <p>Пн-Пт: 8:00–22:00<br>Сб-Вс: 9:00–23:00</p>
                    </div>
                </div>

                <div class="contact-info">
                    <h3>ФРАНЧАЙЗИНГ</h3>
                    <div class="contact-item">
                        <strong>Для партнеров</strong>
                        <p>franchise@echo-coffee.com</p>
                    </div>
                    <div class="contact-item">
                        <strong>Телефон</strong>
                        <p>+7 (800) 555-56-78</p>
                    </div>
                    <div class="contact-item">
                        <strong>Коммерческий директор</strong>
                        <p>Иванов Иван Иванович</p>
                    </div>
                    <div class="contact-item">
                        <strong>Условия сотрудничества</strong>
                        <p>Мы открыты к предложениям о сотрудничестве и развитию сети ECHO COFFEE в новых регионах.</p>
                    </div>
                </div>
            </div>

            <div class="map-container">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d860.9596763723843!2d37.93106963317104!3d59.12037464091203!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x46afb7b3b89dc133%3A0x3270485ad5f20a5d!2z0KPRh9C10LHQvdGL0Lkg0LrQvtGA0L_Rg9GBIOKEliAxINCn0JPQow!5e0!3m2!1sru!2sru!4v1747484361430!5m2!1sru!2sru"
                        width="100%"
                        height="100%"
                        style="border:0;"
                        allowfullscreen=""
                        loading="lazy"
                        referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>

            <div class="contact-form">
                <h3>ФОРМА ОБРАТНОЙ СВЯЗИ</h3>
                <form>
                    <div class="form-group">
                        <label for="name">Ваше имя</label>
                        <input type="text" id="name" placeholder="Введите ваше имя">
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" placeholder="Введите ваш email">
                    </div>
                    <div class="form-group">
                        <label for="phone">Телефон</label>
                        <input type="tel" id="phone" placeholder="Введите ваш телефон">
                    </div>
                    <div class="form-group">
                        <label for="message">Сообщение</label>
                        <textarea id="message" placeholder="Введите ваше сообщение"></textarea>
                    </div>
                    <button type="submit" class="submit-btn">ОТПРАВИТЬ</button>
                </form>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="site-footer">
        <div class="footer-content">
            <div class="footer-grid">
                <div class="footer-about">
                    <h4>О НАС</h4>
                    <p>
                        ECHO COFFEE — сеть кофеен премиум-класса, основанная в 2015 году.
                        Мы тщательно отбираем зерна с лучших плантаций мира и обжариваем их
                        по уникальной технологии.
                    </p>
                </div>

                <div class="footer-contacts">
                    <h4>КОНТАКТЫ</h4>
                    <div class="contact-item">
                        <strong>Телефон:</strong> +7 (800) 555-12-34
                    </div>
                    <div class="contact-item">
                        <strong>Email:</strong> info@echo-coffee.com
                    </div>
                    <div class="contact-item">
                        <strong>Адрес:</strong> г. Череповец, Советский пр. 8
                    </div>
                </div>

                <div class="footer-legal">
                    <h4>ЮРИДИЧЕСКАЯ ИНФОРМАЦИЯ</h4>
                    <p>
                        ООО "ЭХО КОФЕ"<br>
                        ИНН 1234567890<br>
                        ОГРН 1234567890123
                    </p>
                </div>
            </div>

            <div class="footer-bottom">
                <div class="footer-copyright">
                    © @DateTime.Now.Year ECHO COFFEE. Все права защищены.
                </div>
                <div class="footer-links">
                    <a href="/privacy">Политика конфиденциальности</a>
                    <a href="/terms">Условия использования</a>
                </div>
            </div>
        </div>
    </footer>

    @code {
        private bool isBurgerMenuOpen = false;

        private void ToggleBurgerMenu()
        {
            isBurgerMenuOpen = !isBurgerMenuOpen;
        }

        private void NavigateTo(string page)
        {
            if (isBurgerMenuOpen)
            {
                ToggleBurgerMenu();
            }
            Navigation.NavigateTo($"/{page.ToLower()}", forceLoad: true);
        }
    }
</body>
</html>